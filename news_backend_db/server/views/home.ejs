<% if (!user) { %>
    <p>Welcome! Please <a href="/login">login</a> or <a href="/register">register</a> to edit news.</p>
    <p>Login with <a href="/login/fb">Facebook account</a>.</p>

    <p>Get all <a href="/news">news</a>.</p>
    <p>Get news by id, use /news/{id} endpoint.</p>
<% } else { %>
    <p>Hello, <%= user.displayName %>.</p>
    <p>Get all <a href="/news">news</a>.</p>
